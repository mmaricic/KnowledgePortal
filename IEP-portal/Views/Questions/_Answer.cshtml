@model IEP_portal.Models.CreateQuestionViewModel

<div class="col-md-7" align="center">
    @Html.Label("Answers", new { @style = "margin-left:16% " })
</div>
<div class="col-md-5" align="left">
    @Html.Label("Correct Answer", new { @style = "margin-left:6%" })
</div>

    
<hr />

@for (int i = 0; i < ViewBag.K; i++)
{
@Html.ValidationSummary(true, "", new { @class = "text-danger", @align = "center" })
<div class="form-group" style="margin-left:100px">

    @Html.Label(((char)(i+65))+":", htmlAttributes: new { @class = "control-label col-md-4" })
    <div class="col-md-3">
        @Html.TextBoxFor(model => model.answers[i].Text,"", new { @id = "Answer" + i , @class = "form-control", @required = "required" })
        @Html.ValidationMessageFor(model => model.answers[i].Text, "", new { @class = "text-danger", @name = "Answer " + i })
    </div>
    <div class="col-md-5" align="left" style="vertical-align:middle">
        @Html.RadioButton("Correct", i+1, i==0, new { @style = "margin-left:4%" })
    </div>
</div>
}

<br />
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
